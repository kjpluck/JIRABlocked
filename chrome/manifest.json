{
  "name": "JIRA Blocked Marker",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Highlights any JIRA tasks with 'BLOCKED' in the title",
  "content_scripts": [
    {
      "matches": ["https://jira.dev.bbc.co.uk/secure/TaskBoard.jspa*"],
      "js":      ["MakeBlockedTaskRed.js"]
    }
  ],
  "permissions": [
    "tabs","https://jira.dev.bbc.co.uk/secure/TaskBoard.jspa*"
  ]
}